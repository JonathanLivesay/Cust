@model SimpleCustomerDatabase.Web.Models.CustomerModels

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Customer View";
}
<div class="columns medium-10">

    <table class="table table-striped table-hover">
        <caption>Customer List</caption>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var customer1 in Model.Customers)
        {
        <tbody>
            <tr>
                <td>@customer1.Id</td>
                <td>@customer1.FirstName</td>
                <td>@customer1.LastName</td>
                <td>@customer1.PhoneNumber</td>
                <td>@customer1.Email</td>
                <td>@Html.ActionLink("Details", "Details", "Customer", new { id = customer1.Id }, new { @class = "tiny radius button" })</td>
            </tr>
        </tbody>
        }
    </table>

</div>

